<Window x:Class="ExportProducts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExportProducts"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*" />
            <ColumnDefinition Width="447*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="25*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0">Productos</Label>
        <ComboBox Grid.Column="1" Name="productsBox"></ComboBox>
        <Label Grid.Row="2">id product</Label>
        <TextBox Grid.Row="2" Grid.Column="1" Name="boxIdProductMB"/>
        <Label Grid.Row="4">id product atributte</Label>
        <TextBox Grid.Row="4" Grid.Column="1" Name="boxAttributeMB"/>
        <Label Grid.Row="6">Articulo</Label>
        <TextBox Grid.Row="6" Grid.Column="1" Name="boxArticuloMB"/>
        <Button Grid.Row="8" Grid.ColumnSpan="2" x:Name="btnInsertMB" Click="btnInsert_Click" Content="Insertar"/>
    </Grid>
</Window>
